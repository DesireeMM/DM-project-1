[Unit]
Description=My first project, called When To Chill. An app designed to make scheduling events among groups easier.
After=network.target

[Service]
User=ubuntu
Group=ubuntu
Environment="LANG=en_US.UTF-8"
Environment="LANGUAGE=en_US.UTF-8:"
WorkingDirectory=/home/ubuntu/DM-project-1/
ExecStart=/bin/bash -c "source secrets.sh\
&& source env/bin/activate\
&& python3 server.py &>> flask.log"
Restart=always

[Install]
WantedBy=multi-user.target